<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <title>Report</title>
  </head>
  <body>
    <h1 class="text-center mt-3">Patient Report</h1>
    
    <div class="container px-1 d-flex flex-column justify-content-center" style="height: 100vh;">
        <table class="table">
            <tbody>
                <tr>
                    <td colSpan="3"><b>ID:</b><span class="ms-4">{{_id}}</span></td>
                </tr>
                <tr>
                    <td colSpan="2"><b>First Name:</b><span class="ms-4">{{firstName}}</span></td>
                    <td colSpan="2"><b>Last Name:</b><span class="ms-4">{{lastName}}</span></td>
                </tr>
                <tr>
                    <td colSpan="2"><b>Date Of Birth:</b><span class="ms-4">{{DOB}}</span></td>
                    <td colSpan="2"><b>Age:</b><span class="ms-4">23</span></td>
                </tr>
                <tr>
                    <td colSpan="2"><b>Sex:</b><span class="ms-4">{{sex}}</span></td>
                    <td colSpan="2"><b>Marital Status:</b><span class="ms-4">{{maritalStatus}}</span></td>
                </tr>
                <tr>
                    <td><b>Blood Group:</b><span class="ms-4">{{bloodGroup}}</span></td>
                    <td><b>Height:</b><span class="ms-4">{{height}} m</span></td>
                    <td><b>Weight:</b><span class="ms-4">{{weight}} lbs</span></td>
                </tr>
                <tr>
                    <td colSpan="3"><b>Email:</b><span class="ms-4">{{email}}</span></td>
                </tr>
                <tr>
                    <td colSpan="3"><b>Phone#:</b><span class="ms-4">{{phoneNumber}}</span></td>
                </tr>
                <tr>
                    <td colSpan="3"><b>Address:</b><span class="ms-4">{{address}}</span></td>
                </tr>
                <tr>
                    <td colSpan="3"><b>Description:</b><br />
                        {{description}}
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table">
            <tbody>
                <tr>
                    <td colSpan="2"><b>Doctor's name:</b><span class="ms-4">Dr. {{doctorName}}</span></td>
                    <td colSpan="2"><b>Speciality:</b><span class="ms-4">{{doctorSpeciality}}</span></td>
                </tr>
            </tbody>
        </table>
        <table class="table">
            <tbody>
                <tr>
                    <td colSpan="2"><b>Pneumothorax:</b><span class="ms-4">{{pneumothorax}}</span></td>
                    <td colSpan="2"><b>Diagnosis:</b><span class="ms-4">{{diagnosis}}</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  </body>
</html>